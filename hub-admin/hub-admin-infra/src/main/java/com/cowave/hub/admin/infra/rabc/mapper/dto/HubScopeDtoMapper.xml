<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cowave.hub.admin.infra.rabc.mapper.dto.HubScopeDtoMapper">

    <resultMap id="scopeMap" type="com.cowave.hub.admin.domain.rabc.HubScope">
        <result property="scopeId"      column="scope_id"/>
        <result property="scopeName"    column="scope_name"/>
        <result property="scopeContent" column="scope_content"
                typeHandler="com.cowave.zoo.framework.support.mybatis.pg.PgJsonHandler"/>
    </resultMap>

    <select id="listScopeByPermit" resultMap="scopeMap">
        select s.scope_id, s.scope_name, s.scope_content
        from hub_menu m
        join hub_role_menu rm on m.menu_id = rm.menu_id and m.menu_permit = #{permit}
        join hub_role r on rm.role_id = r.role_id and r.role_code in
            <foreach collection="list"  item="item" open="(" separator="," close=")">
                #{item}
            </foreach>
        join hub_scope s on rm.scope_id = s.scope_id
    </select>
</mapper>
